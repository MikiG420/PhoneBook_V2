<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneBookMVVM.MVVM.Pages.AddPage"
             Title="AddPage">
    <ScrollView>
        <StackLayout Padding="30" Spacing="15" HorizontalOptions="Center">
            <Label Text="Dodaj nowy kontakt"
                   FontSize="20"
                   HorizontalOptions="Center" />

            <Label Text="Imię:" />
            <Entry x:Name="FirstNameEntry" Placeholder="Imię" WidthRequest="300" />

            <Label Text="Nazwisko:" />
            <Entry x:Name="LastNameEntry" Placeholder="Nazwisko" WidthRequest="300" />

            <Label Text="Numer telefonu:" />
            <Entry x:Name="PhoneNumberEntry"
                   Placeholder="Numer telefonu"
                   WidthRequest="300"
                   Keyboard="Telephone" />

            <Button Text="Dodaj"
                    x:Name="SaveButton"
                    BackgroundColor="Green"
                    TextColor="White"
                    WidthRequest="300"
                    Margin="0,20,0,0"
                    Clicked="AddPerson_Clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>