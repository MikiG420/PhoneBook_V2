<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneBookMVVM.MVVM.Pages.EditPage"
             Title="EditPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15" HorizontalOptions="Center">

            <Label Text="Edytuj dane"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Label Text="Imię" HorizontalOptions="Center" />
            <Entry x:Name="FirstNameEntry"
                   Placeholder="Imię"
                   WidthRequest="300"
                   Text="{Binding FirstName}" />

            <Label Text="Nazwisko" HorizontalOptions="Center" />
            <Entry x:Name="LastNameEntry"
                   Placeholder="Nazwisko"
                   WidthRequest="300"
                   Text="{Binding LastName}" />

            <Label Text="Numer telefonu" HorizontalOptions="Center" />
            <Entry x:Name="PhoneNumberEntry"
                   Placeholder="Numer telefonu"
                   WidthRequest="300"
                   Keyboard="Telephone"
                   Text="{Binding PhoneNumber}" />

            <Button x:Name="SaveButton"
                    Text="Zapisz"
                    Margin="0,20,0,0"
                    Clicked="SaveButton_Clicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>